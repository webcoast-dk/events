<T3DataStructure>
    <ROOT>
        <type>array</type>
        <el>
            <settings.limit>
                <TCEforms>
                    <label>
                        LLL:EXT:events/Resources/Private/Language/locallang_db.xlf:flexform.default.settings.limit
                    </label>
                    <config>
                        <type>input</type>
                        <eval>int</eval>
                        <size>5</size>
                        <default>4</default>
                    </config>
                </TCEforms>
            </settings.limit>
            <settings.detailPid>
                <TCEforms>
                    <label>
                        LLL:EXT:events/Resources/Private/Language/locallang_db.xlf:flexform.default.settings.detailPid
                    </label>
                    <config>
                        <type>group</type>
                        <internal_type>db</internal_type>
                        <allowed>pages</allowed>
                        <size>1</size>
                        <maxitems>1</maxitems>
                        <minitems>0</minitems>
                        <wizards>
                            <suggest>
                                <type>suggest</type>
                            </suggest>
                        </wizards>
                    </config>
                </TCEforms>
            </settings.detailPid>
            <settings.listPid>
                <TCEforms>
                    <label>
                        LLL:EXT:events/Resources/Private/Language/locallang_db.xlf:flexform.default.settings.listPid
                    </label>
                    <config>
                        <type>group</type>
                        <internal_type>db</internal_type>
                        <allowed>pages</allowed>
                        <size>1</size>
                        <maxitems>1</maxitems>
                        <minitems>0</minitems>
                        <wizards>
                            <suggest>
                                <type>suggest</type>
                            </suggest>
                        </wizards>
                    </config>
                </TCEforms>
            </settings.listPid>
            <settings.showActive>
                <TCEforms>
                    <label>
                        LLL:EXT:events/Resources/Private/Language/locallang_db.xlf:flexform.default.settings.showStartedEvents
                    </label>
                    <config>
                        <type>check</type>
                        <renderType>checkboxToggle</renderType>
                        <default>0</default>
                    </config>
                </TCEforms>
            </settings.showActive>
            <settings.categories>
                <TCEforms>
                    <label>
                        LLL:EXT:events/Resources/Private/Language/locallang_db.xlf:flexform.default.settings.categories
                    </label>
                    <config>
                        <type>select</type>
                        <renderType>selectTree</renderType>
                        <foreign_table>sys_category</foreign_table>
                        <foreign_table_where>AND sys_category.sys_language_uid IN (-1, 0) ORDER BY sys_category.title ASC</foreign_table_where>
                        <treeConfig>
                            <appearance>
                                <showHeader>1</showHeader>
                            </appearance>
                            <parentField>parent</parentField>
                        </treeConfig>
                    </config>
                </TCEforms>
            </settings.categories>
        </el>
    </ROOT>
</T3DataStructure>
